doctype html
html(lang='en')
  head
    meta(charset='utf-8')
    meta(http-equiv='X-UA-Compatible', content='IE=edge')
    meta(name='viewport', content='width=device-width, initial-scale=1')
    title Book Reviewer
    // Bootstrap core CSS
    link(href='/stylesheets/bootstrap.min.css', rel='stylesheet')
    link(href='/stylesheets/style.css', rel='stylesheet')
  body
    // Fixed navbar
    nav.navbar.navbar-default.navbar-fixed-top
      .container
        .navbar-header
          button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') Online Book Reviewer
        #navbar.collapse.navbar-collapse
          ul.nav.navbar-nav
            li(class = (title === 'Reviews') ? 'active' : '')
              a(href='/') Home
            if !user
              li(class = (title === 'Signin') ? 'active' : '')
                a(href='/users/signin') Login
              li(class = (title === 'Signup') ? 'active' : '')
                a(href='/users/signup') Signup
          ul.nav.navbar-nav.navbar-right
            if user
              li
                a(href='/users/logout') Logout              
        // /.nav-collapse
    // Begin page content
    .container
      != messages()
      block content
    footer.footer
      .container
        p.text-muted &copy; 2017 - Online Book Reviewer
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js')
    script(src='/javascripts/bootstrap.min.js')